# Application Configuration
DIP_STUDIO_APP_NAME=DIP Studio
DIP_STUDIO_APP_VERSION=0.1.0
DIP_STUDIO_DEBUG=true
DIP_STUDIO_LOG_LEVEL=INFO

# Server Configuration
DIP_STUDIO_HOST=0.0.0.0
DIP_STUDIO_PORT=8000
DIP_STUDIO_WORKERS=1

# API Configuration
DIP_STUDIO_API_PREFIX=/api/dip-studio/v1

# MariaDB Configuration
DIP_STUDIO_DB_HOST=localhost
DIP_STUDIO_DB_PORT=3306
DIP_STUDIO_DB_NAME=dip_studio
DIP_STUDIO_DB_USER=root
DIP_STUDIO_DB_PASSWORD=

# Mock Mode (for development without external services)
DIP_STUDIO_USE_MOCK_SERVICES=false

# Hydra (token 内省，与 hub 一致)
DIP_STUDIO_HYDRA_HOST=http://localhost:4445
DIP_STUDIO_HYDRA_TIMEOUT=30

# User Management (根据用户 ID 获取用户信息，与 hub 一致)
DIP_STUDIO_USER_MANAGEMENT_URL=http://user-management
DIP_STUDIO_USER_MANAGEMENT_TIMEOUT=60
